<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.single_screen.BusinessApp"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/vut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/vutlogo"
        android:layout_gravity="center"
        android:paddingTop="8dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tel(016) 950-9500"
            android:paddingTop="8dp"
            android:paddingLeft="8dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fax:(016) 950-9772"
            android:paddingLeft="8dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:paddingLeft="8dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Private Bag X021"
            android:paddingLeft="8dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"


            android:layout_height="wrap_content"
            android:text="Vanderbijlpark, 1900"
            android:paddingLeft="8dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Andries Potgieter Boulevard"
            android:paddingLeft="8dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vanderbijlpark"
            android:paddingLeft="8dp"
            android:textStyle="bold"/>



    </LinearLayout>


</LinearLayout>
